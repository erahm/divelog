<h1>Listing dives</h1>

<table>
  <thead>
    <tr>
      <th>Dive number</th>
      <th>Depth</th>
      <th>Starting pressure group</th>
      <th>Ending pressure group</th>
      <th>Weight</th>
      <th>Dive time</th>
      <th>Starting air</th>
      <th>Ending air</th>
      <th>Bottom temperature</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dives.each do |dive| %>
      <tr>
        <td><%= dive.dive_number %></td>
        <td><%= dive.depth %></td>
        <td><%= dive.starting_pressure_group %></td>
        <td><%= dive.ending_pressure_group %></td>
        <td><%= dive.weight %></td>
        <td><%= dive.dive_time %></td>
        <td><%= dive.starting_air %></td>
        <td><%= dive.ending_air %></td>
        <td><%= dive.bottom_temperature %></td>
        <td><%= link_to 'Show', dive %></td>
        <td><%= link_to 'Edit', edit_dive_path(dive) %></td>
        <td><%= link_to 'Destroy', dive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

