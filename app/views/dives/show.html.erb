<p id="notice"><%= notice %></p>

<p>
  <strong>Dive Number:</strong>
  <%= @dive.dive_number %>
</p>

<p>
  <strong>Depth:</strong>
  <%= @dive.depth %>
</p>

<p>
  <strong>Starting Pressure Group:</strong>
  <%= @dive.starting_pressure_group %>
</p>

<p>
  <strong>Ending Pressure Group:</strong>
  <%= @dive.ending_pressure_group %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @dive.weight %>
</p>

<p>
  <strong>Dive Time:</strong>
  <%= @dive.dive_time %>
</p>

<p>
  <strong>Starting Air:</strong>
  <%= @dive.starting_air %>
</p>

<p>
  <strong>Ending Air:</strong>
  <%= @dive.ending_air %>
</p>

<p>
  <strong>Bottom Temperature:</strong>
  <%= @dive.bottom_temperature %>
</p>

<h3>Comments</h3>
  <% @comments.each do |comment| %>
        <div class="comment well"><%= comment.comment_text %></div>
  <% end %>
<%= link_to 'Add Comment', new_comment_path(:dive_id => @dive.id, :user_id => current_user) %>
<br />

<%= link_to 'Edit', edit_dive_path(@dive) %> |
<%= link_to 'Back', dives_path %> |
<%= link_to 'Delete', @dive, method: :delete, data: { confirm: 'Are you sure?' } %>
